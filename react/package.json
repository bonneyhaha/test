{
“name”: “notification-app”,
“version”: “1.0.0”,
“description”: “WebSocket Notification App for Windows”,
“main”: “main.js”,
“scripts”: {
“start”: “electron .”,
“build”: “webpack –mode production”,
“package”: “npm run build && electron-builder build –win –publish never”
},
“build”: {
“appId”: “com.notification.app”,
“productName”: “Notification App”,
“directories”: {
“output”: “release”
},
“win”: {
“target”: [
{
“target”: “nsis”,
“arch”: [“x64”]
}
],
“icon”: “build/icon.ico”
},
“nsis”: {
“oneClick”: false,
“allowToChangeInstallationDirectory”: true,
“createDesktopShortcut”: true,
“createStartMenuShortcut”: true
},
“files”: [
“dist/**/*”,
“main.js”,
“package.json”
]
},
“dependencies”: {
“react”: “^18.2.0”,
“react-dom”: “^18.2.0”
},
“devDependencies”: {
“@babel/core”: “^7.23.0”,
“@babel/preset-react”: “^7.22.0”,
“babel-loader”: “^9.1.3”,
“electron”: “^27.0.0”,
“electron-builder”: “^24.6.4”,
“html-webpack-plugin”: “^5.5.3”,
“webpack”: “^5.89.0”,
“webpack-cli”: “^5.1.4”
}
}